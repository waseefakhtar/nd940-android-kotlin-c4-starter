<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomTheme" parent="FirebaseUI">
        <!-- Required for sign-in flow styling -->
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryDark">@color/nero</item>
        <item name="colorAccent">@color/aqua_marine</item>

        <item name="colorControlNormal">@color/desert_storm</item>
        <item name="colorControlActivated">@color/nobel</item>
        <item name="colorControlHighlight">@color/nobel</item>
        <item name="android:windowBackground">@color/dark_gray</item>
    </style>

</resources>
